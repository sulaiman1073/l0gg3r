{
  "name": "l0gg3r",
  "version": "0.6.1",
  "description": "Minimalistic logging library for javascript",
  "main": "index.js",
  "scripts": {
    "start": "node ./index.js",
    "devserver": "nodemon ./example.js",
    "prettier": "prettier \"./lib/**/*.+(js|json|yml|yaml|md|mdx)\"",
    "unprettified": "npm run prettier -- --list-different",
    "format": "npm run prettier -- --write",
    "lint": "eslint ./lib/ -c ./.eslintrc --ext js",
    "fix": "eslint ./lib/ --fix",
    "validate": "run-p lint unprettified",
    "test": "jest --runInBand",
    "test-watch": "jest --watch --runInBand",
    "test-watchall": "jest --watchAll --runInBand",
    "coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "collectCoverageFrom": [
      "<rootDir>/lib/**/*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "./lib/**/*.{js}": [
      "npm run format",
      "npm run fix",
      "jest --runInBand --findRelatedTests",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sulaiman1073/l0gg3r.git"
  },
  "keywords": [
    "logger"
  ],
  "author": "sulaiman1073",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sulaiman1073/l0gg3r/issues"
  },
  "homepage": "https://github.com/sulaiman1073/l0gg3r#readme",
  "dependencies": {
    "chalk": "^3.0.0",
    "fast-redact": "^2.0.0",
    "fast-safe-stringify": "^2.0.7"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.30",
    "@types/supertest": "^2.0.8",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^3.1.0",
    "jest": "^25.1.0",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}
